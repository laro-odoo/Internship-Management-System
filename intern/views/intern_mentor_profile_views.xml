<odoo>
    <!-- Search View -->
    <record id='intern_mentor_profile_view_search' model='ir.ui.view'>
        <field name='name'>intern.mentor.profile.search</field>
        <field name='model'>intern.mentor.profile</field>
        <field name='arch' type='xml'>
            <search>
                <field name='name'/>
                <field name='email'/>
                <field name='phone_number'/>
                <field name='department_id'/>
            </search>
        </field>
    </record>

    <!-- Form View -->
    <record id='intern_mentor_profile_view_form' model='ir.ui.view'>
        <field name='name'>intern.mentor.profile.form</field>
        <field name='model'>intern.mentor.profile</field>
        <field name='arch' type='xml'>
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name='name'/>
                        </group>
                        <group>
                            <field name='email'/>
                        </group>
                        <group>
                            <field name='phone_number'/>
                        </group>
                        <group>
                            <field name='department_id'/>
                        </group>
                    </group>
                    <notebook>
                        <page string='Interns'>
                            <group>
                                <field name='intern_ids'>
                                    <tree string='Interns' editable='bottom' delete='false'>
                                        <field name='name'/>
                                        <field name='email'/>
                                        <field name='phone_number'/>
                                        <field name='skill_ids' widget='many2many_tags' />
                                        <field name='start_date'/>
                                        <field name='end_date'/>
                                        <button name="remove_mentor" string=' ' type="object" icon="fa-trash"/>
                                    </tree>
                                </field>
                            </group>
                        </page>  <!-- TODO: add the interns list and the add intern button -->
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id='intern_mentor_profile_view_tree' model='ir.ui.view'>
        <field name='name'>Mentor Profile</field>
        <field name='model'>intern.mentor.profile</field>
        <field name='arch' type='xml'>
            <tree string='Mentor Profile'>
                <field name='name'/>
                <field name='email'/>
                <field name='phone_number'/>
                <field name='department_id'/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id='intern_mentor_profile_action' model='ir.actions.act_window'>
        <field name='name'>Mentor Profile</field>
        <field name='res_model'>intern.mentor.profile</field>
        <field name='view_mode'>tree,form</field>
    </record>
</odoo>
