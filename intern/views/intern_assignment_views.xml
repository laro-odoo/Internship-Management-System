<odoo>
    <!-- Search View -->
    <record id='intern_assignment_view_search' model='ir.ui.view'>
        <field name='name'>intern.assignment.search</field>
        <field name='model'>intern.assignment</field>
        <field name='arch' type='xml'>
            <search>
                <field name='name'/>
            </search>
        </field>
    </record>

    <!-- Form View -->
    <record id='intern_assignment_view_form' model='ir.ui.view'>
        <field name='name'>intern.assignment.form</field>
        <field name='model'>intern.assignment</field>
        <field name='arch' type='xml'>
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name='name'/>
                            <field name='project_id'/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name='description'/>
                                </group>
                            </page>
                            <page string="Interns">
                                <field name='assignment_status_ids'>
                                    <tree editable='bottom'>
                                        <field name="intern_id"/>
                                        <field name='status'/>
                                        <field name='start_date'/>
                                        <field name='end_date'/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id='intern_assignment_view_tree' model='ir.ui.view'>
        <field name='name'>intern.assignment.tree</field>
        <field name='model'>intern.assignment</field>
        <field name='arch' type='xml'>
            <tree string='Assignments'>
                <field name='name'/>
                <field name='description'/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id='intern_assignment_action' model='ir.actions.act_window'>
        <field name='name'>Assignments</field>
        <field name='res_model'>intern.assignment</field>
        <field name='view_mode'>tree,form</field>
        <field name='context'>{'group_by': 'project_id'}</field>
    </record>
</odoo>
