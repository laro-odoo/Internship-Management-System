<odoo>
    <!-- Search View -->
    <record id='intern_assignment_view_search' model='ir.ui.view'>
        <field name='name'>intern.assignment.search</field>
        <field name='model'>intern.assignment</field>
        <field name='arch' type='xml'>
            <search>
                <field name='title'/>
                <field name='description'/>
            </search>
        </field>
    </record>

    <!-- Form View -->
    <record id='intern_assignment_view_form' model='ir.ui.view'>
        <field name='name'>intern.assignment.form</field>
        <field name='model'>intern.assignment</field>
        <field name='arch' type='xml'>
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name='title'/>
                        </group>
                        <group>
                            <field name='description'/>
                        </group>
                        <group>
                            <field name='start_date'/>
                        </group>
                        <group>
                            <field name='end_date'/>
                        </group>
                        <group>
                            <field name='status'/>
                        </group>
                        <group>
                            <field name='feedback'/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id='intern_assignment_view_tree' model='ir.ui.view'>
        <field name='name'>intern.assignment.tree</field>
        <field name='model'>intern.assignment</field>
        <field name='arch' type='xml'>
            <tree string='Assignments'>
                <field name='title'/>
                <field name='description'/>
                <field name='start_date'/>
                <field name='end_date'/>
                <field name='status'/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id='intern_assignment_action' model='ir.actions.act_window'>
        <field name='name'>Assignments</field>
        <field name='res_model'>intern.assignment</field>
        <field name='view_mode'>tree,form</field>
    </record>
</odoo>
