<odoo>
    <!-- Search View -->
    <record id='intern_project_view_search' model='ir.ui.view'>
        <field name='name'>intern.project.search</field>
        <field name='model'>intern.project</field>
        <field name='arch' type='xml'>
            <search>
                <field name='name'/>
                <field name='description'/>
            </search>
        </field>
    </record>

    <!-- Form View -->
    <record id='intern_project_view_form' model='ir.ui.view'>
        <field name='name'>intern.project.form</field>
        <field name='model'>intern.project</field>
        <field name='arch' type='xml'>
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name='name'/>
                            <field name='description'/>
                            <field name='total_marks'/>
                        </group>
                    </group>
                    <notebook>
                        <page name="Interns" string="Interns">
                            <field name='project_status_ids'>
                                <tree string="Project Status" editable='bottom'>
                                    <field name="intern_id"/>
                                    <field name="status"/>
                                    <field name='total_marks_obtained'/>
                                    <field name="completion_percentage" widget='progressbar'/>
                                    <field name='start_date'/>
                                    <field name='end_date'/>
                                </tree>
                            </field>
                        </page>
                        <page name="assignments" string="Assignments">
                            <field name='assignment_ids'/>
                        </page>
                        <page string="Reports">
                            <field name='submitted_reports' >
                                <tree>
                                    <field name='intern_id'/>
                                    <field name='name'/>
                                    <field name='report_date'/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id='intern_project_view_tree' model='ir.ui.view'>
        <field name='name'>intern.project.tree</field>
        <field name='model'>intern.project</field>
        <field name='arch' type='xml'>
            <tree string='Projects'>
                <field name='name'/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id='intern_project_action' model='ir.actions.act_window'>
        <field name='name'>Projects</field>
        <field name='res_model'>intern.project</field>
        <field name='view_mode'>tree,form</field>
    </record>
</odoo>
