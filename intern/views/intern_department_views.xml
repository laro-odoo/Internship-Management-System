<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Search View -->
    <record id="intern_department_view_search" model="ir.ui.view">
        <field name="name">intern.department.search</field>
        <field name="model">intern.department</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <!-- Form View -->
    <record id="intern_department_view_form" model="ir.ui.view">
        <field name="name">intern.department.form</field>
        <field name="model">intern.department</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="intern_department_action" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">intern.department</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
