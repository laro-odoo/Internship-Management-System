<odoo>
    <!-- Search View -->
    <record id='intern_profile_view_search' model='ir.ui.view'>
        <field name='name'>intern.profile.search</field>
        <field name='model'>intern.profile</field>
        <field name='arch' type='xml'>
            <search>
                <field name='name'/>
                <field name='email'/>
                <field name='phone_number'/>
                <field name='skill_rating_ids'/>
                <field name='mentor_id'/>
                <filter string='Skill' name='skill_group_by' context="{'group_by': 'skill_ids'}"/>
                <filter string='Department' name='department_group_by' context="{'group_by': 'department_id'}"/>
            </search>
        </field>
    </record>

    <!-- Form View -->
    <record id='intern_profile_view_form' model='ir.ui.view'>
        <field name='name'>intern.profile.form</field>
        <field name='model'>intern.profile</field>
        <field name='arch' type='xml'>
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name='name'/>
                            <field name='email'/>
                            <field name='phone_number'/>
                    </group>
                    <group>
                        <field name='mentor_id'/>
                        <field name='start_date'/>
                        <field name='end_date'/>
                    </group>
                    <notebook>
                        <page string='Skills'>
                            <group>
                                <field name='skill_rating_ids'>
                                    <tree string="Skills" editable="bottom">
                                        <field name='skill_id'/>
                                        <field name='rating_star'/>
                                    </tree>
                                </field>
                                <field name='performance_evaluation'/>
                            </group>
                        </page>
                        <page string='Projects'>
                            <group>
                                <field name='project_status_ids'>
                                    <tree string="Project Status" editable='bottom'>
                                        <field name="project_id"/>
                                        <!-- <field name="status"/> -->
                                        <field name="completion_percentage" widget='progressbar'/>
                                        <field name='start_date'/>
                                        <field name='end_date'/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string='Assignments'>
                            <group>
                                <field name='assignment_status_ids'>
                                    <tree editable='bottom'>
                                        <field name="assignment_id"/>
                                        <field name="project_name"/>
                                        <field name="status"/>
                                        <field name='start_date'/>
                                        <field name='end_date'/>
                                        <button string="Description" name="action_description" type="object"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string='Reports'>
                            <group>
                                <field name='report_ids'>
                                    <tree>
                                        <field name="name"/>
                                        <field name="project_id"/>
                                        <field name='report_date'/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id='intern_profile_view_tree' model='ir.ui.view'>
        <field name='name'>intern.profile.tree</field>
        <field name='model'>intern.profile</field>
        <field name='arch' type='xml'>
            <tree string="Intern Profile">
                <field name='name'/>
                <field name='email'/>
                <field name='phone_number'/>
                <field name="mentor_id" />
                <field name='skill_rating_ids' widget='many2many_tags' />
                <field name='start_date'/>
                <field name='end_date'/>
                <field name='performance_evaluation'/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id='intern_profile_action' model='ir.actions.act_window'>
        <field name='name'>Intern Profile</field>
        <field name='res_model'>intern.profile</field>
        <field name='view_mode'>tree,form</field>
    </record>
</odoo>
